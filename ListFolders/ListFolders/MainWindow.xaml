<Window x:Class="ListFolders.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListFolders"
        mc:Ignorable="d"
        Title="Lista undermappar" Height="450" Width="510">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="21,30,0,0" Text="Välj mapp att få en lista över undermappar" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22"/>
        <Button x:Name="listButton" Content="Generera lista av undermappar" HorizontalAlignment="Left" Margin="261,76,0,0" VerticalAlignment="Top" Click="Button_Click" Height="50" Width="210" FontSize="14" FontWeight="Normal"/>
        <Button x:Name="pathButton" Content="Klicka här för att välja mapp..." HorizontalAlignment="Left" Margin="21,76,0,0" VerticalAlignment="Top" Click="Button_Click_1" Height="50" Width="210" FontSize="14"/>
        <TextBlock x:Name="pathTextBlock" HorizontalAlignment="Left" Margin="21,140,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14"/>
        <TextBlock x:Name="statusTextBlock" HorizontalAlignment="Left" Margin="21,180,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>

    </Grid>
</Window>
